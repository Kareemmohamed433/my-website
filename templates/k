  <script>
    function toggleMenu() {
      var menu = document.getElementById("mobileMenu");
      if (menu && menu.style.display === "block") {
        menu.style.display = "none";
      } else if(menu) {
        menu.style.display = "block";
      }
    }
  </script>
  
